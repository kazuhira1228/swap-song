<%= render partial: "shared/header" %>

<body>

  <%= form_with model: @activity, local: true do |f| %>
  <div class="form">

    <h2 class="form-title">新規投稿</h2><br />

    <%= render 'shared/error_messages', model: f.object %>

    <div class="field">
      <%= f.label :グループ名 %><br />
      <%= f.text_field :group, autofocus: true, autocomplete: "group" %>
    </div>

    <div class="field">
      <%= f.label :活動日 %><br />
      <%= f.date_field :activity_day, autofocus: true, autocomplete: "activity_day" %>
    </div>

    <div class="field">
      <%= f.label :練習曲 %><br />
      <%= f.text_field :song, autofocus: true, autocomplete: "song" %>
    </div>

    <div class="field">
      <%= f.label :練習場所 %><br />
      <%= f.text_field :studio, autofocus: true, autocomplete: "studio" %>
    </div>

    <div class="field">
      <%= f.label :活動記録 %><br />
      <%= f.text_area :text, autofocus: true, autocomplete: "text" %>
    </div>

    <div class="field">
      <%= f.label :画像 %><br />
      <%= f.file_field :image, autofocus: true, autocomplete: "image" %>
    </div>
    <br />

  </div>

  <div>
    <%= f.submit "投稿",  data: {confirm: "投稿が完了しました。今日も練習お疲れ様です。"}, class: "devise-btn" %>
  </div>

  <% end %>

</body>